
<div class="title">
    <i class="fa-solid fa-users"></i>
    <span class="text">Agregar Usuario</span>

</div>
<form action="/api-users/register" method="POST">
    <div style="display: flex; flex-direction: row;color: azure;">
      <div class="etiqueta">
        <div class="form-floating mb-3">
        <label for="Username" class="form-label">Usuario</label>
        <input type="text" class="form-control" name="username" id="Username" placeholder="Usuario" required>
        </div>
      </div>
      <div class="etiqueta">
        <div class="form-floating mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
        </div>
      </div>
      <div class="etiqueta">
        <div class="form-floating mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" name="password" id="password" value="" placeholder="Password" required>
        </div>
      </div>
      <div class="etiqueta">
        <div class="col-12">
          <div class="d-grid my-3">
            <button class="btn btn-primary btn-lg" type="submit">Agregar</button>
          </div>
        </div>
      </div>
    </div>
</form>

<div class="usuarios">
    <div class="title">
        <i class="fa-solid fa-users"></i>
        <span class="text">Usuarios</span>

    </div>

    <div class="users">
        <% data.users.forEach((u)=> { %>
            <div class="card" style="width: 18rem;">
                <% if (u.url_img) { %>
                    <img src="<%= u.url_img %>" class="card-img-top">
                <% } else { %>
                    <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" class="card-img-top" >
                <% } %>
                <div class="card-body">
                    <h5 class="card-title">
                        <% if (u.is_admin === "true") { %>
                            <i class="fa-solid fa-crown"></i>
                        <% } else { %>
                            <i class="fa-solid fa-user"></i>
                        <% } %>
                        <%= u.username %>
                    </h5>
                    <p class="card-text">
                        <%= u.email %>
                    </p>
                    <div class="total">
                        <span> <% if (!u.cantTickets || u.cantTickets == 0) { %>
                            0
                        <% } else { %>
                            <%= u.cantTickets %>
                        <% } %> </span>
                        <p>Tickets Realizados</p>
                        <p><%= u.cantTickets %></p>
                    </div>
                    
                </div>
                <div class="card-footer">
                    <a href="">Editar</a>
                    <!-- <a href="/api-users/user-delete/<%= u.user_id %>" onclick="return confirm('¿Deseas eliminar este usuario?')">Eliminar</a> -->
                    <a href="/api-users/user-delete/<%= u.user_id %>" onclick="return confirm('¿Deseas eliminar este usuario?')">Eliminar</a>
                </div>
            </div>
            <% }); %>
    </div>
</div>

