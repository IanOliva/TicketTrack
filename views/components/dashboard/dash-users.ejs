<div class="title">
  <i class="fa-solid fa-users"></i>
  <span class="text">Agregar Usuario</span>
</div>
<form action="/api-users/register" method="POST">
  <div style="display: flex; flex-direction: row; flex-wrap: wrap">
    <div class="etiqueta">
      <div class="form-floating mb-3">
        <label for="Username" class="form-label">Usuario</label>
        <input
          type="text"
          class="form-control"
          name="username"
          id="Username"
          placeholder="Usuario"
          required
        />
      </div>
    </div>
    <div class="etiqueta">
      <div class="form-floating mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          class="form-control"
          name="email"
          id="email"
          placeholder="name@example.com"
          required
        />
      </div>
    </div>
    <div class="etiqueta">
      <div class="form-floating mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          name="password"
          id="password"
          value=""
          placeholder="Password"
          required
        />
      </div>
    </div>
  </div>
  <div class="etiqueta">
    <div class="col-12">
      <div class="d-grid my-3">
        <button class="btn btn-primary btn-lg" type="submit">Agregar</button>
      </div>
    </div>
  </div>
</form>

<div class="usuarios">
  <div class="title">
    <i class="fa-solid fa-users"></i>
    <span class="text">Usuarios</span>
  </div>

  <div class="users">
    <% data.users.forEach((u)=> { %>
    <div class="card" style="width: 18rem">
      <img src="<%= u.url_img %>" class="card-img-top" />
      <div class="card-body">
        <h5 class="card-title">
          <div class="itemrole">
            <% if (u.is_admin==="true" ) { %>
            <i class="fa-solid fa-crown"></i>
                <p style="bottom: -8px;">Admin</p>
            <% } else { %>
            <i class="fa-solid fa-user"></i>
                <p style="bottom: -10px; left: 0; right: 0;">User</p>
            <% } %>
          </div>
          <%= u.username %>
        </h5>
        <p class="card-text"><%= u.email %></p>
        <div class="total">
          <p>Tickets Realizados</p>
          <span>
            <% if (!u.cantTickets || u.cantTickets==0) { %> 0 <% } else { %> <%=
            u.cantTickets %> <% } %>
          </span>
        </div>
      </div>
      <div class="card-footer">
        <!-- <a href="/api-users/user-update/<%= u.user_id %>" title="Editar" ><i class="fa-solid fa-user-pen"></i></a> -->
        <a
          href="/api-users/user-delete/<%= u.user_id %>"
          title="Borrar"
          onclick="return confirm('Al eliminar este usuario se eliminaran los tickets asociados \nÂ¿Deseas eliminar este usuario?')"
          ><i class="fa-solid fa-trash-can"></i
        ></a>
      </div>
    </div>
    <% }); %>
  </div>
</div>
